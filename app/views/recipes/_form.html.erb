<%= render 'shared/errors' , obj: @recipe%>
<div class="row">
	<div class="col-md-12">
		<%= form_for(@recipe, :html => { class: "form-horizontal", role: "form"}) do |f|%>
			<div class="form-group row">
				<div class="control-label offset-md-1 col-md-1">
					<%= f.label :name%>
				</div>
				<div class="col-md-8">
					<%= f.text_field :name, class: "form-control", placeholder: "Name of recipe", autofocus: true%>
				</div>
			</div>

			<div class="form-group row">
				<div class="control-label offset-md-1 col-md-1">
					<%= f.label :description%>
				</div>
				<div class="col-md-8">
					<%= f.text_area :description, rows: 10 , class: "form-control", placeholder: "Enter steps to create recipe", autofocus: true%>
				</div>
			</div>

			<div class="form-group">
				<div class="row">
					<div class="offset-md-2 col-md-8">
						<%= f.collection_check_boxes :ingredient_ids, Ingredient.all,:id, :name do |cb| %>
						 		<% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "check_box") +  cb.text } %>
						<% end %>								

					</div>
				</div>
			</div>

			<div class="form-group row">
				<div class="offset-md-2 col-md-8">
					<%= f.submit class: "btn btn-success btn-lg" %>
				</div>
			</div>
		<% end %>

		<div class=" offset-md-4 col-md-4 colormatch" >
			[<%= link_to "cancel request and return to recipes list" , recipes_path%>]
		</div><br><br>
	</div>
</div>
