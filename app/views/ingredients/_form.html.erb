<%= render 'shared/errors' , obj: @ingredient%>
<div class="row">
	<div class="col-md-12">
		<%= form_for(@ingredient, :html => { class: "form-horizontal", role: "form"}) do |f|%>
			<div class="form-group row">
				<div class="control-label offset-md-1 col-md-1">
					<%= f.label :name%>
				</div>
				<div class="col-md-8">
					<%= f.text_field :name, class: "form-control", placeholder: "Enter ingredient", autofocus: true%>
				</div>
			</div>

			<div class="form-group row">
				<div class="offset-md-2 col-md-8">
					<%= f.submit(@ingredient.new_record? ? "Add ingredient" : "Update ingredient",
					class: "btn btn-success btn-lg") %>
				</div>
			</div>
		<% end %>

		<div class=" offset-md-4 col-md-4 colormatch" >
			[<%= link_to "cancel request and return to ingredient list" , ingredients_path%>]
		</div><br><br>
	</div>
</div>
